<html>
	<head>
	  <meta charset="utf-8">
	  <meta name="viewport" content="width=device-width, initial-scale=1">
	  <link rel="stylesheet" href="/public/styles/appliedjobscss.css">
	  <link rel="preconnect" href="https://fonts.gstatic.com">
		<link href="https://fonts.googleapis.com/css2?family=Roboto+Slab&display=swap" rel="stylesheet">
		<link rel="preconnect" href="https://fonts.gstatic.com">
		<link href="https://fonts.googleapis.com/css2?family=Hind+Madurai:wght@300&display=swap" rel="stylesheet">
		  <link rel="preconnect" href="https://fonts.gstatic.com">
		<link href="https://fonts.googleapis.com/css2?family=Alata&display=swap" rel="stylesheet">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
		 <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
	</head>
	<body>
		<div id="sideNavBar">
				<a href="/userhome" class="tooltip"><i class="fa fa-home fa-lg"></i><span class="tooltiptext">Home</span></a>
				<a href="/userprofile" class="tooltip"><i class="fa fa-user-circle fa-lg"></i><span class="tooltiptext">Profile</span></a>
				<a href="/appliedJobs" class="tooltip"><i class="fa fa-folder-open"></i><span class="tooltiptext">Applications</span></a>
				<a href="/logout" class="tooltip"><i class="fa fa-sign-out fa-lg"></i><span class="tooltiptext">Log Out</span></a>
		</div>
		<div id="upper">
				<div id="user">
					<p id="name"><%=data[0].UserName%></p>
					<p id="id"><a href="/salaryPredictor" target="_blank">Salary Predictor</a></p>
				</div>
				<a href="/"><img src="/public/jobs.png"></a>
		</div>
		<div class="main">
			
			
			<div class="header">
				<h1>Your Applications</h1>
				</div>
			
			<div class="applications">
				<%if(jobs.length==0){%>
				<p style="color: blue; margin-left: 50px;">YOU HAVE NOT APPLIED TO ANY JOB YET...</p>
				<%}else{
				for(var i=0; i < jobs.length; i++){%>
				<form method='post' action='/withdraw'>
					<div class="application">
						<h3 class="companyName"><%=jobs[i]['Company name']%></h3>
						<p class="role"><%=jobs[i].Role%></p>
						<p class="status">Status : <%=jobs[i].Status%></p>
						<p class="sent">Applied on : <%=jobs[i]['Application Date'].toDateString()%></p>

						<input type="text" class="invisible" value="<%=jobs[i]['Job Id']%>" name="id">
						<%if(jobs[i].Status == 'Withdrawn'){%>
							<button class="withdraw" style="background-color: grey; cursor: default;">Application Withdrawn</button>
						<%}else{%>
						<button class="withdraw" type="submit">Withdraw Appliation</button>
						<%}%>
					</div>
				</form>

				<%}}%>
			</div>
		<!-- </div> -->
		</div>
		
	</body>
</html>