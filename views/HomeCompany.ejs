<!DOCTYPE html>
<html>

<head>
    <title>
        Home Company
    </title>
    <script src="/public/scripts/HomeCompanyScript.js"></script>
    <link rel="stylesheet" href="/public/styles/HomeCompanyStyle.css">

</head>

<body>
    <div class="container">
        <!-- Header -->
        <div id="header">
            <a id="logo" href="/"><img src="/public/jobs.png"></a>
            
        </div>

        

        <div class="row">
            <!-- Vertical Navbar -->
            <div class="column navbar">
                <ul>
                    <li><a href="#">Home</a></li>
                    <li><a href="/companyHome/newjob">New Job</a></li>
                    <li><a href="#">About Us</a></li>
                    <li><a href="/logout">Logout</a></li>
                </ul>
            </div>
        </div>
            <!-- Jobs Card -->
        <div class="cards">

            <% for(let job of data){%>
                <div class="card" >
                    <div class="cardheader">
                        <span class="job"><%=job.Role%></span>
                        <span class="location"><%=job.Place%></span>
                    </div>
                    <div class="cardbody">
                        <span class="opendate">Vacancy Created On: <span><%=job.Date.getDay()+1%>-<%=job.Date.getMonth()+1%>-<%=job.Date.getFullYear()%></span> </span>
                        <span class="applicants">No of applicants: <span> <%=job["No of Applicants"]%></span></span>
                    </div>
                    <div class="cardfooter">
                        <form action = "/companyHome/closevacancy" method = "post">
                            <span class="closevacancy">
                                <input type = "text" name = "jobid" value = "<%=job['Job Id']%>" style = "display: none;">
                                <input type = "submit" value = "Close Vacancy">
                            </span>
                        </form>
                        
                        <span class="viewapplicants" >
                        <form action = "/companyHome/viewapplicants" method = "post">
                            <input type = "text" name = "jobid" value = "<%=job['Job Id']%>" style = "display: none;">
                            <input type="submit" value="View applicants">
                        </form>
                        </span>
                    </div>
                </div>
            <%}%>
        </div>

            <div id="modal">
                <form id="modal-content">
                    <div class="row1">
                        <label class="label" for="name">Job Name:</label>
                        <input class="input" id="name" type="text" name="name" placeholder="Software Engineer">
                    </div>
                    <div class="row1">
                        <label class="label" for="location">Location:</label>
                        <input class="input" id="location" type="text" name="location" placeholder="Bhopal">
                    </div>
                    <div class="row1">
                        <label class="label " for="about">About Job</label>
                        <input class="input  about" id="about" type="textarea" name="about" placeholder="Details of the job">
                    </div>
                    <div class="row1">
                        <label class="label requirements" for="label">Job Requirements</label>
                        <input class="input about" id="input" type="textarea" name="name" placeholder="Requirements">
                    </div>
                    <div>
                        <input id="submitbtn" type="submit" value="Edit">
                    </div>
                </form>
            </div>

        
    </div>
</body>
<script src = "/public/scripts/HomeCompanyScript.js"></script>
</html>